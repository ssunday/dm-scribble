{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true
  },
  "include": [
    "src/**/*",
    "spec/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
